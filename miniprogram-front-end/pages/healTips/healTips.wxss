.container{
  width: 100%;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  height: 85%;
} 

.topNav{
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
}

.content{
  width: 78%;
  height: 700rpx;
  overflow: scroll;
  margin-top: 10rpx;
}

.content p{
  display: block;
  white-space: normal;
}

.content image{
  width: 350rpx;
  display: block;
  margin: 20rpx;
}

.content .item{
  font-weight: bolder;
  padding: 25rpx 0;
  font-size: large;
  margin: 0 20rpx;
}