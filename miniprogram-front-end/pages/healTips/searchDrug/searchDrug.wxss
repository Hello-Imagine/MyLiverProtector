/* pages/searchDrug/searchDrug.wxss */
.container{
  width: 100%;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

.topNav{
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
}

.search{
  border: rgb(132,111,96) solid 6rpx;
  width: 60%;
  height: 42rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  background-color: honeydew;
  margin-top: 10rpx;
}

.search input{
  margin-left: 12rpx;
}

.search image{
  width: 85rpx;
  z-index: 100;
}

.content{
  margin-top: 40rpx;
  width: 75%;
  height: 600rpx;
}

.content text{
  white-space: normal;
}

.isExist{
  position: fixed;
  top: 23%;
}

.frame{
  position: fixed;
  width: 75%;
  height: 60%;
  top: 20%;
  left: 12%;
  overflow: scroll;
}

.aboutDrug{
  background-color: white;
  border: rgb(132,111,96) solid 6rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  padding: 0 20rpx 20rpx 24rpx;
}

.aboutDrug image{
  width: 80rpx;
}

.aboutDrug .topInfo{
  display: flex;
  flex-direction: row;
}

.aboutDrug .name{
  font-size: 40rpx;
  padding-top: 15rpx;
}

.confirm{
  border: rgb(132,111,96) solid 5rpx;
  width: 80rpx;
  text-align: center;
  margin: auto;
  background-color: rgb(239,229,222);
  border-radius: 12rpx;
  margin-top: 10rpx;
}