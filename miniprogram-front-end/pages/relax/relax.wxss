page{
  background-color: #EDE8E5;
}
.container{
  width: 100%;
  height: 100%;
  color: gray;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container swiper{
  width: 100%;
  height: 420rpx;
}
.container swiper image{
  width: 100%;
}
/* 顶部导航栏的框 */
.box{
  background: whitesmoke;
  color: gray;
  width: 100%;
  font: bolder;
  }

.bflex{
  display: flex;
  text-align: center;
}
  
.box .box-item.current{
  border-bottom:4rpx solid ;
  text-align: center;
}

.text-selected{
  color:darkcyan;
  font-size: 34rpx;
  text-align: center;
}

.box .box-item{
  height: 90rpx;
  display: inline-block;
  line-height: 90rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
  flex: 1;
}
