.display{
  flex: 1;
  display: flex;
  flex-wrap: wrap;
}
.display.item{
  width: 33%;
}
.display .item image{
  width: 150rpx;
  margin: 30rpx 18.75rpx 0 18.75rpx;
  display: block;
}
.display .item text{
  display: block;
  text-align: center;
}
.mask{
  position: fixed;
  top: 13%;
  width: 100%;
}

.mask .img{
  width: 100%;
  z-index: -1;
  position: fixed;
}

.mask .stop{
  position: fixed;
  width: 350rpx;
  top: 63%;
  left: 25%;
}