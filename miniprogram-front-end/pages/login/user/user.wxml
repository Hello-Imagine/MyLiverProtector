<image class="background" src="https://liverprotector-1305433999.cos.ap-nanjing.myqcloud.com/images/login/back.jpg"></image>
<view class="container">
  <view class="title">
    <text>新的护肝使者，好耶！</text>
    <image src="https://liverprotector-1305433999.cos.ap-nanjing.myqcloud.com/images/login/%E8%82%9D1.png" mode="widthFix"></image>
  </view>
  <view class="livers">
    <image src="https://liverprotector-1305433999.cos.ap-nanjing.myqcloud.com/images/index/health-liver/3.png" class="img1" mode="widthFix"></image>
    <image src="https://liverprotector-1305433999.cos.ap-nanjing.myqcloud.com/images/index/normal-liver/3.png" class="img2" mode="widthFix"></image>
  </view>
  <view class="content">
    <view class="name">
      <input placeholder="主人的护肝使者称号" bindblur="getName"></input>
      <image src="https://miniprogram-1305537466.cos.ap-chengdu.myqcloud.com/miniprogram-MZY/input.png" mode="widthFix"></image>
    </view>

    <radio-group class="sex" bindchange="getSex">
      <radio value="0" checked="true" color="rgb(132,111,96)">
        <text>主人是男孩子</text>
        <image src="https://liverprotector-1305433999.cos.ap-nanjing.myqcloud.com/images/login/BOY.jpg" mode="widthFix"></image>
      </radio>
      <radio value="1" checked="true" color="rgb(132,111,96)">
        <text>主人是女孩子</text>
        <image src="https://liverprotector-1305433999.cos.ap-nanjing.myqcloud.com/images/login/GIRL.jpg" mode="widthFix"></image>
      </radio>
    </radio-group>
  </view>
  <myButton bindtap="finish" propA="../questions/questions">获得肝宝宝</myButton>
</view>